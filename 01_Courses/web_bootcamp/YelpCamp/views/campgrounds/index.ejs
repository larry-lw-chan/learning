<% layout('layouts/boilerplate.ejs') %>

<h1>All Campgrounds</h1>
<ul>
    <% for (let campground of campgrounds) { %>
        <li>
            <a href="/campgrounds/<%= campground._id %>">
                <%= campground.title %> - <%= campground.location %>
            </a>
        </li>
    <% } %>
</ul>
<footer>
    <a href="/campgrounds/new">Create New Campground</a>
</footer>